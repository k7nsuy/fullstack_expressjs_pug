extend base

block content 
    if errorMessage   
        h2=errorMessage
    hr
    form(method="POST")
        input(placeholder="USER ID" name="userID", type="text" required)     
        input(placeholder="Email" name="email", type="email" required)        
        input(placeholder="User Name" name="userName", type="text" required)     
        input(placeholder="Password" name="password1", type="password" minlength="8" required)     
        input(placeholder="Confirm Password" name="password2", type="password" minlength="8" required)     
        input(placeholder="Location" name="location", type="text" required)     
        input(type="submit", value="Join")
    hr
    div 
        span Already have an account? 
        a(href="/login") Log In now &rarr;


